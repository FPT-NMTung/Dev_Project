<body>
<!-- ======= Header ======= -->
<header id="header" class="fixed-top d-flex align-items-center">
    <div class="container d-flex align-items-center">

        <div class="logo me-auto">
            <h1>
                <a href="#">E-Learning</a>
            </h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
        </div>

        <nav id="navbar" class="navbar order-last order-lg-0">
            <ul>
                <li>
                    <a class="nav-link scrollto " href="/#hero">Trang chủ</a>
                </li>
                <li>
                    <a class="nav-link scrollto active" href="/course">Các khóa học</a>
                </li>
                <li>
                    <a class="nav-link scrollto " href="/#team">Về chúng tôi</a>
                </li>
                <li>
                    <a class="nav-link scrollto" href="/#contact">Thông tin liên hệ</a>
                </li>
            </ul>
            <i class="bi bi-list mobile-nav-toggle"></i>
        </nav><!-- .navbar -->
        <div class="button-login-register">
            @if ( Session["email"] == null ) {
                <a class="nav-link scrollto" href="/login">Đăng nhập</a>
                <a class="nav-link scrollto" href="/register">Đăng ký</a>
            } else {
                <a href="/profile" class="nav-link scrollto" style="margin: 0px">Hello @Session["name"]!</a>
                <a class="nav-link scrollto" href="/logout">Đăng xuất</a>
            }
        </div>

    </div>
</header><!-- End Header -->

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <h2>@ViewBag.courseName</h2>
        </div>
    </section><!-- End Breadcrumbs -->

    <section class="inner-page">
        <div class="container main-display">
            <div class="learning-video">
                <iframe width="100%" height="100%" src="https://www.youtube.com/embed/@ViewBag.srcVideo?showinfo=1&autoplay=1"
                        title="YouTube video player" frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen>
                </iframe>

                <div class="container card-detail">
                    <h4>@ViewBag.title</h4>
                    <br>
                    <p style="white-space: pre-line; max-height: 400px; overflow-y: auto">@ViewBag.description</p>
                </div>
            </div>
            <div class="learning-list">
                <ul>
                    @model List<Project.Controllers.WatchLessonTable>

                    @foreach ( var item in Model ) {
                        //if else condition
                        if ( item.watched == true ) {
                            <li>
                                <div class="card-lesson lesson-done">
                                    <a style="color: black" href="/learning/@item.courseID/@item.lessonID">
                                        <h4 class="title-lesson-nmtung">
                                            <span>
                                                <img src="https://img.icons8.com/color/20/000000/checked-2--v1.png" />
                                            </span>@item.name
                                        </h4>
                                        <p class="card-time">@item.time</p>
                                    </a>
                                </div>
                                <hr>
                            </li>
                        } else {
                            <li>
                                <div class="card-lesson">
                                    <a style="color: black" href="/learning/@item.courseID/@item.lessonID">
                                        <h4 class="title-lesson-nmtung">@item.name</h4>
                                        <p class="card-time">@item.time</p>
                                    </a>
                                </div>
                                <hr>
                            </li>
                        }
                    }
                </ul>

                @if ( ViewBag.doneCourse == true ) {
                    if ( ViewBag.hasQuiz ) {
                        <div class="btn-success" style="text-align: center; border-radius: 10px; background-color: #51CC2A">
                            <a type="btn" href="/exam/@ViewBag.CourseID">
                                <h4 style="color: white; font-size: 16px; padding: 10px; border-radius: 10px;">Bạn đã sẵn sàng để làm Quiz?</h4>
                            </a>
                        </div>
                    } else {
                        <div class="btn-secondary" style="text-align: center; border-radius: 10px; background-color: gray">
                            <a type="btn" href="#">
                                <h4 style="color: white; font-size: 16px; padding: 10px; border-radius: 10px;">Hiện tại chưa có quiz cho khoá học này</h4>
                            </a>
                        </div>
                    }
                }
            </div>
        </div>
    </section>

</main><!-- End #main -->
