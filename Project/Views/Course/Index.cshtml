        </nav><!-- .navbar -->
        <div class="button-login-register">
            @if ( Session["email"] == null ) {
                <a class="nav-link scrollto" href="/login">Đăng nhập</a>
                <a class="nav-link scrollto" href="/register">Đăng ký</a>
            } else {
                <a href="/profile" class="nav-link scrollto" style="margin: 0px">Hello @Session["name"]!</a>
                <a class="nav-link scrollto" href="/logout">Đăng xuất</a>
            }
        </div>
    </div>
</header><!-- End Header -->

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <h2>Khoá Học</h2>
        </div>
    </section><!-- End Breadcrumbs -->
    @model Project.Controllers.CourseList
    @{
        //thêm 1 vòng if account log in ở ngoài
        var tem1p = Model.courseJoin;
        var video = Model.IdVideoList;
        if ( tem1p != null ) {
            if ( tem1p.ToList().Count() != 0 ) {
                <section class="inner-page">
                    <div class="container">
                        <h4>Các khoá học đã đăng ký</h4>
                        <div class="main-grid">
                            @for ( int i = 0; i < tem1p.Count; i++ ) {
                                <div class="card-course">
                                    <div class="contain-image">
                                        <img class="card-course-img"
                                             src="@tem1p[i].Image" alt="">
                                    </div>
                                    <h3 class="title-course">@tem1p[i].Name</h3>
                                    <p class="text-des">@tem1p[i].Description</p>
                                    <a href="/register/@tem1p[i].CourseID" class="btn btn-success btn-register-course">Vào học ngay</a>
                                </div>
                            }
                        </div>
                    </div>
                </section>
            }
        }
    }
    <section class="inner-page">
        <div class="container">
            @{
                var temp = Model.course;
            }
            @if ( tem1p != null && tem1p.Count != 0 ) {
                if ( temp.Count != 0 ) {
                    <hr>
                    <h4>Các khoá học khác</h4>
                }
            }
            <div class="main-grid">

                @foreach ( var el in temp ) {
                <div class="card-course">
                    <div class="contain-image">
                        <img class="card-course-img"
                             src="@el.Image" alt="">
                    </div>
                        <h3 class="title-course">@el.Name</h3>
                        <p class="text-des">@el.Description</p>

                        <a href="/course/@el.CourseID" class="btn btn-primary btn-register-course">Xem chi tiết</a>
                    </div>
                    }
                </div>
        </div>
    </section>

</main><!-- End #main -->
