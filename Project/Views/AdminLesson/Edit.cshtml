<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>Edit lesson | Admin | E-Learning</title>
    <link rel="stylesheet" href="/Content/css/admin/index.css">
    <link rel="stylesheet" href="/Content/css/admin/lesson-detail.css">
</head>

<body>
<div id="body">
    <div class="left-bar">
        <div>
            <div class="bar-logo">
                <img src="/Content/img/android-chrome-192x192.png" alt="logo" height="40px">
            </div>
            <div class="bar-info">
                <div class="bar-info-img">
                    <img src="https://img.icons8.com/office/40/000000/user-male-circle.png"/>
                </div>
                <div class="bar-info-name">
                    @Session["name"]
                </div>
            </div>
        </div>
        <div class="nav">
            <div class="nav-bar">
                <ul>
                    <li>
                        <a href="/admin/user">
                            <div class="nav-bar-img">
                                <img src="https://img.icons8.com/ios-glyphs/26/686868/user.png"/>
                            </div>
                            <div class="nav-bar-name">
                                User
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/course" class="active-link-nav">
                            <div class="nav-bar-img">
                                <img src="https://img.icons8.com/ios-filled/26/686868/courses.png"/>
                            </div>
                            <div class="nav-bar-name">
                                Course
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="nav-bar">
                <ul>
                    <li>
                        <a href="/admin/logout">
                            <div class="nav-bar-img">
                                <img src="https://img.icons8.com/material-sharp/26/686868/shutdown.png"/>
                            </div>
                            <div class="nav-bar-name">
                                Logout
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="right-bar">
        <div class="heder-body">
            <div class="header-content">
                <div>Edit lesson</div>
            </div>
        </div>
        <div class="main-body">
            @if ( ViewBag.isExist != null ) {
                if ( ViewBag.isExist == true ) {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        Save lesson failed !!!
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            }
            @if ( ViewBag.isSave != null ) {
                if ( ViewBag.isSave == true ) {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        Save lesson success !!!
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            }
            <div class="detail-course">
                <div class="course-img">
                    <img id="image-overlay" src="" alt="image video" width="100%">
                </div>
                <div class="course-info">
                    <div class="course-el">
                        <form action="/admin/lesson/@ViewBag.courseID/@ViewBag.lessonID/update" method="POST" id="myFrom">
                            <div class="top">
                                @model Project.Models.Lession
                                <div>
                                    <label for="id">ID: </label><br>
                                    <input required type="text" id="id" name="id" value="@Model.Video" onkeyup="clickCheck()">
                                </div>
                                <div>
                                    <label for="id">Name: </label><br>
                                    <input required name="name" type="text" id="name">
                                </div>
                                <div>
                                    <label for="id">Description: </label><br>
                                    <textarea required name="description" id="description" cols="30" rows="10"></textarea>
                                </div>
                                <div>
                                    <label for="id">Time: </label><br>
                                    <input required name="time" type="text" id="time">
                                </div>
                            </div>
                            <br>
                            <input type="button" value="Submit" id="submit-button" style="display: none" onclick="clickSubmit()">
                            <a class="button-e" id="button-delete" href="/admin/lesson/@ViewBag.courseID/@ViewBag.lessonID/delete">Delete</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/Content/script/fetchData.js"></script>
<script>
    window.onload = () => {
        clickCheck();
    }
</script>
</body>
</html>