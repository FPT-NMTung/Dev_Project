    <!-- vendor -->
    <link href="~/Content/vendor/aos/aos.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" type="text/css" />
    <!-- Template Main CSS File -->
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/editProfile.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center">
            <div class="logo me-auto">
                <h1>
                    <a href="#">E-Learning</a>
                </h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>
            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li>
                        <a class="nav-link scrollto active" href="/#hero">Trang chủ</a>
                    </li>
                    <li>
                        <a class="nav-link scrollto " href="/course">Các khóa học</a>
                    </li>
                    <li>
                        <a class="nav-link scrollto " href="/#team">Về chúng tôi</a>
                    </li>
                    <li>
                        <a class="nav-link scrollto" href="/#contact">Thông tin liên hệ</a>
                    </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
            <div class="button-login-register">
                @if (Session["email"] == null)
                {
                    <a class="nav-link scrollto" href="/login">Đăng nhập</a>
                    <a class="nav-link scrollto" href="/register">Đăng ký</a>
                }
                else
                {
                    <a href="/profile" class="nav-link scrollto" style="margin: 0px">Hello @Session["name"]!</a>
                    <a class="nav-link scrollto" href="/logout">Đăng xuất</a>
                }
            </div>
        </div>
    </header>
    <!-- End Header -->
    <div class="container">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="~/Content/img/userImage.jpg" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
                                <div class="mt-3">
                                    <h4>@ViewBag.name</h4>
                                    <p class="text-secondary mb-1">@ViewBag.email</p>
                                    <p class="text-muted font-size-sm">@ViewBag.address</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">

                        <div class="card-body">
                            @if (ViewBag.inforMessage == false)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewBag.failInfor
                                </div>
                            }
                            @using (Html.BeginForm("EditUserProfile", "Profile", FormMethod.Post))
                            {
                                <h4 class="d-flex align-items-center mb-3"><b>Thay đổi thông tin người dùng</b></h4>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Họ và tên</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input id="name" name="name" type="text" class="form-control" value="@ViewBag.name" required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input id="email" name="email" type="text" class="form-control" value="@ViewBag.email" readonly>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Giới tính</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @*<input id="gender" name="gender" type="text" class="form-control" value="@ViewBag.gender">*@
                                        <input type="radio" id="male" name="gender" value="male" @ViewBag.genderMale>
                                        <label style="margin: 0px 20px;" for="male">Nam</label>
                                        &nbsp;&nbsp;&nbsp;
                                        <input type="radio" id="female" name="gender" value="female" @ViewBag.genderFemale>
                                        <label style="margin: 0px 20px;" for="female">Nữ</label>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Số điện thoại</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input id="phone" name="phone" type="text" class="form-control" value="@ViewBag.phone" maxlength="10" required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Địa chỉ</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input id="address" name="address" type="text" class="form-control" value="@ViewBag.address" required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-9 text-secondary">
                                        <button type="submit" class="btn btn-primary btn-block">
                                            Lưu
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-body">
                                    @if (ViewBag.passMessage == false)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @ViewBag.failPass
                                        </div>
                                    }
                                    @using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post))
                                    {
                                        <h4 class="d-flex align-items-center mb-3"><b>Thay đổi mật khẩu</b></h4>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Mật khẩu cũ</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input id="oldPass" name="oldPass" type="password" class="form-control" placeholder="Mật khẩu cũ" maxlength="36" required>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Mật khẩu mới</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input id="newPass" name="newPass" type="password" class="form-control" placeholder="Mật khẩu mới" maxlength="36" required>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Nhập lại mật khẩu</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input id="rePass" name="rePass" type="password" class="form-control" placeholder="Nhập lại mật khẩu" maxlength="36" required>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-3"></div>
                                            <div class="col-sm-9 text-secondary">
                                                <button type="submit" class="btn btn-primary btn-block">
                                                    Lưu
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6">
                        <div class="footer-info">
                            <h3>E-Learning</h3>
                            <p>
                                <strong>Đại học FPT</strong> <br>
