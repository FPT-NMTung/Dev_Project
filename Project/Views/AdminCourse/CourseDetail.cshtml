<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/css/admin/index.css">
    <link rel="stylesheet" href="~/Content/css/admin/courseDetail.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap" rel="stylesheet">
    <link href="~/Content/vendor/aos/aos.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" type="text/css" />
    <title>Edit course | Admin | E-Learning</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body>
    <div id="body">
        <div class="left-bar">
            <div>
                <div class="bar-logo">
                    <img src="~/Content/img/android-chrome-192x192.png" alt="logo" height="40px">
                </div>
                <div class="bar-info">
                    <div class="bar-info-img">
                        <img src="https://img.icons8.com/office/40/000000/user-male-circle.png" />
                    </div>
                    <div class="bar-info-name">
                        @ViewBag.adminName
                    </div>
                </div>
            </div>
            <div class="nav">
                <div class="nav-bar">
                    <ul>
                        <li>
                            <a href="/admin/user">
                                <div class="nav-bar-img">
                                    <img src="https://img.icons8.com/ios-glyphs/26/686868/user.png" />
                                </div>
                                <div class="nav-bar-name">
                                    User
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/course" class="active-link-nav">
                                <div class="nav-bar-img">
                                    <img src="https://img.icons8.com/ios-filled/26/686868/courses.png" />
                                </div>
                                <div class="nav-bar-name">
                                    Course
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="nav-bar">
                    <ul>
                        <li>
                            <a href="/admin/login">
                                <div class="nav-bar-img">
                                    <img src="https://img.icons8.com/material-sharp/26/686868/shutdown.png" />
                                </div>
                                <div class="nav-bar-name">
                                    Logout
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="right-bar">
            <div class="heder-body">
                <div class="header-content">
                    <div>Edit course</div>
                </div>
            </div>
            <div class="main-body">
                <div class="detail-course">
                    <div class="course-img">
                        <img id="image-overlay"
                             src="@ViewBag.image"
                             alt="image course" width="100%">
                    </div>
                    <div class="course-info">
                        <div class="course-el">
                            @if (ViewBag.message == true)
                            {
                                <div class="alert alert-success" role="alert">
                                    Cập nhật thông tin khóa học thành công!
                                </div>
                            }
                            else if (ViewBag.message == false)
                            {
                                <div class="alert alert-danger" role="alert">
                                    Cập nhật thông tin khóa học thất bại!
                                </div>
                            }
                            @using (Html.BeginForm("UpdateCourse", "AdminCourse", FormMethod.Post))
                            {
                                <div class="top">
                                    <div>
                                        <label for="id">ID: </label>
                                        <input type="text" id="id" name="id" value="@ViewBag.courseID" disabled>
                                    </div>
                                    <br>
                                    <div>
                                        <label for="name">Name: </label>
                                        <input type="text" name="name" id="name" value="@ViewBag.courseName">
                                    </div>
                                    <br>
                                    <div>
                                        <label for="desc">Description: </label><br>
                                        <textarea style="width:100%" name="description" id="description" cols="100%" rows="10">@ViewBag.description</textarea>
                                    </div>
                                    <br>
                                </div>

                                <label for="image">Image: </label>
                                <input type="text" name="image" id="image"
                                       value="@ViewBag.image">
                                <input type="button" value="Check image" onclick="checkImage()">
                                <br>
                                <br>
                                <button type="submit">Lưu</button>
                                <button id="deleteButton" class="btn btn-danger">Xóa</button>
                            }
                        </div>
                        <div class="course-el">
                            <a class="button-e" id="button-lesson" href="lesson.html">Lesson</a>
                            <a class="button-e" id="button-quiz" href="quiz.html">Quiz</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/Content/script/courseDetail.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#deleteButton").click(function () {
            $.post("/AdminCourse/DeleteCourse",
                {
                    id: "@ViewBag.courseID"
                },
                function (data, status) {
                    if (status === "success") {
                        alert("Xóa khóa học thành công!")
                        location.replace("/admin/course")
                    } else {
                        alert("Xóa khóa học không thành công!")
                    }

                });
        });
    });
</script>
</html>